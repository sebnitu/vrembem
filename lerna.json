{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "4.0.0-alpha.1",
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "message": "chore(release): bump to %s",
      "ignoreChanges": [
        "**/tests/**",
        "**/*.md",
        "packages/**/*.html"
      ]
    }
  }
}
