{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "4.0.0-next.29",
  "packages": [
    "packages/*",
    "docs"
  ],
  "command": {
    "publish": {
      "message": "chore(release): bump to %s",
      "ignoreChanges": [
        "**/tests/**",
        "**/*.md",
        "packages/**/*.html"
      ]
    }
  },
  "changelog": {
    "repo": "sebnitu/vrembem",
    "cacheDir": ".changelog",
    "labels": {
      "PR: breaking": ":fire: Breaking Changes",
      "PR: feat": ":tada: New Feature",
      "PR: fix": ":bug: Bug Fix",
      "PR: refactor": ":house: Refactor",
      "PR: test": ":white_check_mark: Testing",
      "PR: docs": ":books: Documentation",
      "PR: chore": ":hammer: Chore"
    }
  }
}