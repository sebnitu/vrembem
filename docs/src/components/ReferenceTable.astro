---

<div class="reference-table">
  <table class="table">
    <tr>
      <th>Var</th>
      <th>Value</th>
    </tr>

    {
      props.map(([key, value]) => (
        <tr id={key}>
          <td>
            <a
              class="table-anchor"
              href={`#${key}`}
              aria-label={`Permalink to '${key}' CSS custom property`}
            >
              <Icon name="hash" classes="icon_size_sm" />
            </a>
            <CodeBlock>
              <code>{key}</code>
            </CodeBlock>
          </td>
          <td>
            {typeof value === "string" ? (
              <CodeBlock>
                <code set:html={linkifyValue(value, keys)} />
              </CodeBlock>
            ) : (
              <div class="scroll-box">
                {Object.entries(value).map(([theme, v]) => (
                  <div class="flex justify-content-between align-items-center">
                    <span>
                      <CodeBlock>
                        <code set:html={linkifyValue(v, keys)} />
                      </CodeBlock>
                    </span>
                    <span>
                      <span class="badge">{theme}</span>
                    </span>
                  </div>
                ))}
              </div>
            )}
          </td>
        </tr>
      ))
    }
  </table>
</div>
