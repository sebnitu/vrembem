---
interface Props {
  type: string;
  returns?: string;
  defaults?: string;
}

const {type, defaults, returns} = Astro.props;
---

<div class="flex justify-content-between align-items-center">
  <p>
    <strong>Type:</strong>
    <code class="margin-left-sm">{type}</code>
  </p>
  {
    returns && (
      <p>
        <strong>Returns:</strong>
        <code class="margin-left-sm">{returns}</code>
      </p>
    )
  }
  {
    defaults && (
      <p>
        <strong>Default:</strong>
        <code class="margin-left-sm">{defaults}</code>
      </p>
    )
  }
</div>
