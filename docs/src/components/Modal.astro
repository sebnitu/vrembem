---
interface Props {
  id?: string;
  classes?: string;
  dialogClass?: string;
}

const { id, classes, dialogClass = "dialog" } = Astro.props;

---

<div id={id} class={`modal ${classes}`.trim()}>
  <div class={`modal__dialog ${dialogClass}`.trim()} role="dialog" aria-modal="true">
    <slot />
  </div>
</div>

<script>
  import "../modules/useModal";
</script>
