---
import { CollectionEntry, getCollection } from "astro:content";
import Page from "../../layouts/Page.astro";
import Menu from "../../components/CollectionMenu.astro";
import Pre from "../../components/Pre.astro";
import Table from "../../components/Table.astro";
import OnThisPage from "../../components/OnThisPage.astro";

export async function getStaticPaths() {
  const packages = await getCollection("packages");
  return packages.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<"packages">;
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();
---

<Page title={entry.data.title} aside={true}>
  <div slot="drawer">
    <Menu collection="packages" />
  </div>
  <div slot="aside">
    <OnThisPage {headings} />
  </div>
  <Content components={{ pre: Pre, table: Table }} />
</Page>
