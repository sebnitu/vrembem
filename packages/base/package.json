{
  "name": "@vrembem/base",
  "description": "Includes useful default styles and base modules for common HTML elements.",
  "version": "4.0.0-next.21",
  "license": "MIT",
  "keywords": [
    "BEM",
    "front-end",
    "component",
    "base"
  ],
  "exports": {
    ".": {
      "sass": "./index.scss",
      "style": "./dist/index.css"
    },
    "./dev/*": "./dev/*",
    "./dist/*": "./dist/*",
    "./root": "./root.scss",
    "./*": "./src/*"
  },
  "scripts": {
    "serve": "vite",
    "build": "npm-run-all clean styles",
    "clean": "del dev && del dist",
    "styles": "npm-run-all styles:dev styles:dist",
    "styles:dev": "sass index.scss dev/index.css --load-path=../../node_modules",
    "styles:dist": "sass index.scss dist/index.css --load-path=../../node_modules --style=compressed",
    "watch": "npm run watch:styles",
    "watch:styles": "concurrently 'npm run styles:dev -- --watch ./src' 'npm run styles:dist -- --watch ./src'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebnitu/vrembem.git",
    "directory": "packages/base"
  },
  "homepage": "https://github.com/sebnitu/vrembem/tree/main/packages/base#readme",
  "dependencies": {
    "@vrembem/core": "^4.0.0-next.21"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "d966f513f86f66dddf93ed60ddefe51124562dc0"
}
