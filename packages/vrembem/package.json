{
  "name": "vrembem",
  "description": "A CSS component library based on the BEM methodology.",
  "version": "0.0.0",
  "main": "dist/scripts.cjs.js",
  "module": "index.js",
  "browser": "dist/scripts.js",
  "style": "index.scss",
  "scripts": {
    "build": "npm-run-all clean scripts styles",
    "clean": "del dist",
    "scripts": "rollup -c",
    "styles": "npm-run-all styles:compile styles:min",
    "styles:compile": "sass index.scss dist/styles.css --load-path node_modules",
    "styles:min": "sass dist/styles.css dist/styles.min.css --style compressed",
    "watch": "concurrently --kill-others 'npm run watch:scripts' 'npm run watch:styles'",
    "watch:scripts": "nodemon -e js -x 'npm run scripts'",
    "watch:styles": "nodemon -e scss -x 'npm run styles'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebnitu/vrembem.git",
    "directory": "packages/all"
  },
  "dependencies": {
    "@vrembem/arrow": "^0.0.0",
    "@vrembem/base": "^0.0.0",
    "@vrembem/breadcrumb": "^0.0.0",
    "@vrembem/button": "^0.0.0",
    "@vrembem/button-group": "^0.0.0",
    "@vrembem/card": "^0.0.0",
    "@vrembem/checkbox": "^0.0.0",
    "@vrembem/choice": "^0.0.0",
    "@vrembem/container": "^0.0.0",
    "@vrembem/core": "^0.0.0",
    "@vrembem/dialog": "^0.0.0",
    "@vrembem/dismissible": "^0.0.0",
    "@vrembem/drawer": "^0.0.0",
    "@vrembem/dropdown": "^0.0.0",
    "@vrembem/grid": "^0.0.0",
    "@vrembem/icon": "^0.0.0",
    "@vrembem/icon-action": "^0.0.0",
    "@vrembem/input": "^0.0.0",
    "@vrembem/level": "^0.0.0",
    "@vrembem/media": "^0.0.0",
    "@vrembem/menu": "^0.0.0",
    "@vrembem/modal": "^0.0.0",
    "@vrembem/notice": "^0.0.0",
    "@vrembem/panel": "^0.0.0",
    "@vrembem/radio": "^0.0.0",
    "@vrembem/section": "^0.0.0",
    "@vrembem/span": "^0.0.0",
    "@vrembem/todo": "^0.0.0",
    "@vrembem/toggle": "^0.0.0",
    "@vrembem/tooltip": "^0.0.0",
    "@vrembem/utility": "^0.0.0"
  }
}
