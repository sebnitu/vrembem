{
  "name": "vrembem",
  "description": "A CSS component library based on the BEM methodology.",
  "version": "1.6.0",
  "license": "MIT",
  "keywords": [
    "BEM",
    "front-end",
    "component",
    "library"
  ],
  "main": "dist/scripts.cjs.js",
  "module": "index.js",
  "browser": "dist/scripts.js",
  "style": "index.scss",
  "scripts": {
    "build": "npm-run-all clean scripts styles",
    "clean": "del dist",
    "scripts": "rollup -c",
    "styles": "npm-run-all styles:compile styles:min",
    "styles:compile": "sass index.scss dist/styles.css --load-path node_modules",
    "styles:min": "sass dist/styles.css dist/styles.min.css --style compressed",
    "watch": "concurrently --kill-others 'npm run watch:scripts' 'npm run watch:styles'",
    "watch:scripts": "nodemon -e js -x 'npm run scripts'",
    "watch:styles": "nodemon -e scss -x 'npm run styles'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebnitu/vrembem.git",
    "directory": "packages/vrembem"
  },
  "dependencies": {
    "@vrembem/arrow": "^1.5.4",
    "@vrembem/base": "^1.5.4",
    "@vrembem/breadcrumb": "^1.5.4",
    "@vrembem/button": "^1.5.4",
    "@vrembem/button-group": "^1.5.4",
    "@vrembem/card": "^1.5.4",
    "@vrembem/checkbox": "^1.6.0",
    "@vrembem/container": "^1.5.4",
    "@vrembem/core": "^1.5.4",
    "@vrembem/dialog": "^1.5.4",
    "@vrembem/dismissible": "^1.6.0",
    "@vrembem/drawer": "^1.6.0",
    "@vrembem/dropdown": "^1.5.4",
    "@vrembem/grid": "^1.5.4",
    "@vrembem/icon": "^1.5.4",
    "@vrembem/icon-action": "^1.5.4",
    "@vrembem/input": "^1.6.0",
    "@vrembem/level": "^1.5.4",
    "@vrembem/media": "^1.5.4",
    "@vrembem/menu": "^1.5.4",
    "@vrembem/modal": "^1.6.0",
    "@vrembem/notice": "^1.5.4",
    "@vrembem/panel": "^1.5.4",
    "@vrembem/radio": "^1.5.4",
    "@vrembem/section": "^1.5.4",
    "@vrembem/span": "^1.5.4",
    "@vrembem/switch": "^1.5.4",
    "@vrembem/table": "^1.5.4",
    "@vrembem/tooltip": "^1.5.4",
    "@vrembem/utility": "^1.5.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "d966f513f86f66dddf93ed60ddefe51124562dc0"
}
