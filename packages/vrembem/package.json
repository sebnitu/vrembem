{
  "name": "vrembem",
  "description": "A component library based on the BEM methodology.",
  "version": "4.0.0-next.30",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "BEM",
    "front-end",
    "component",
    "library"
  ],
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./dist/index.umd.cjs",
      "sass": "./index.scss",
      "style": "./dist/index.css"
    },
    "./dev/*": "./dev/*",
    "./dist/*": "./dist/*",
    "./base": "./base.scss",
    "./root": "./root.scss"
  },
  "files": [
    "dev",
    "dist",
    "index.js",
    "index.scss",
    "base.scss",
    "root.scss"
  ],
  "scripts": {
    "serve": "vite",
    "build": "npm-run-all clean styles scripts",
    "clean": "del dev && del dist",
    "scripts": "npm-run-all scripts:dev scripts:dist",
    "scripts:dev": "vite build --outDir dev --minify false",
    "scripts:dist": "vite build --outDir dist",
    "styles": "npm-run-all styles:dev styles:dist",
    "styles:dev": "sass build:dev --load-path=../../node_modules",
    "styles:dist": "sass build:dist --load-path=../../node_modules --style=compressed",
    "watch": "concurrently --kill-others 'npm run watch:scripts' 'npm run watch:styles'",
    "watch:scripts": "concurrently 'npm run scripts:dev -- --watch' 'npm run scripts:dist -- --watch'",
    "watch:styles": "concurrently 'npm run styles:dev -- --watch' 'npm run styles:dist -- --watch'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebnitu/vrembem.git",
    "directory": "packages/vrembem"
  },
  "homepage": "https://github.com/sebnitu/vrembem#readme",
  "dependencies": {
    "@vrembem/base": "^4.0.0-next.30",
    "@vrembem/button": "^4.0.0-next.30",
    "@vrembem/card": "^4.0.0-next.30",
    "@vrembem/checkbox": "^4.0.0-next.30",
    "@vrembem/core": "^4.0.0-next.30",
    "@vrembem/dialog": "^4.0.0-next.30",
    "@vrembem/drawer": "^4.0.0-next.30",
    "@vrembem/flex": "^4.0.0-next.30",
    "@vrembem/grid": "^4.0.0-next.30",
    "@vrembem/icon": "^4.0.0-next.30",
    "@vrembem/input": "^4.0.0-next.30",
    "@vrembem/menu": "^4.0.0-next.30",
    "@vrembem/modal": "^4.0.0-next.30",
    "@vrembem/notice": "^4.0.0-next.30",
    "@vrembem/popover": "^4.0.0-next.30",
    "@vrembem/radio": "^4.0.0-next.30",
    "@vrembem/section": "^4.0.0-next.30",
    "@vrembem/switch": "^4.0.0-next.30",
    "@vrembem/table": "^4.0.0-next.30",
    "@vrembem/utility": "^4.0.0-next.30"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "d966f513f86f66dddf93ed60ddefe51124562dc0"
}
