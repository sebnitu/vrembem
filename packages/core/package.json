{
  "name": "@vrembem/core",
  "description": "The core variables, functions and mixins for Vrembem components.",
  "version": "3.0.0",
  "license": "MIT",
  "keywords": [
    "BEM",
    "front-end",
    "component",
    "core"
  ],
  "source": "index.js",
  "main": "dist/scripts.js",
  "module": "dist/scripts.esm.js",
  "unpkg": "dist/scripts.umd.js",
  "sass": "index.scss",
  "files": [
    "dev",
    "dist",
    "src",
    "index.js",
    "index.scss"
  ],
  "scripts": {
    "build": "npm-run-all clean palette scripts",
    "clean": "del dev && del dist",
    "scripts": "npm-run-all scripts:dev scripts:dist",
    "scripts:dev": "npm run scripts:dist -- --output=dev/scripts.js --no-compress",
    "scripts:dist": "microbundle --name=vrembem.core",
    "palette": "npm-run-all palette:dev palette:dist",
    "palette:dev": "sass src/scss/root/_palette.scss dev/palette.css --load-path=node_modules",
    "palette:dist": "sass src/scss/root/_palette.scss dist/palette.css --load-path=node_modules --style=compressed",
    "watch": "concurrently --kill-others 'npm run watch:scripts' 'npm run watch:palette'",
    "watch:scripts": "nodemon -e js -x 'npm run scripts' -i dev -i dist",
    "watch:palette": "nodemon -e scss -x 'npm run palette'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebnitu/vrembem.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/sebnitu/vrembem/tree/main/packages/core#readme",
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "d966f513f86f66dddf93ed60ddefe51124562dc0",
  "dependencies": {
    "focusable-selectors": "^0.3.1"
  }
}
