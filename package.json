{
  "name": "root",
  "type": "module",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "docs",
    "test"
  ],
  "scripts": {
    "dev": "vite",
    "build": "lerna run build --stream",
    "clean": "lerna run clean --stream",
    "docs": "npm run dev --prefix docs",
    "fix": "npm-run-all fix:styles fix:scripts",
    "fix:scripts": "eslint --fix",
    "fix:styles": "stylelint --fix '**/*.scss'",
    "lint": "npm-run-all lint:styles lint:scripts",
    "lint:scripts": "eslint",
    "lint:styles": "stylelint '**/*.scss'",
    "sink": "npm ci && npm-run-all build lint test:coverage",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "watch": "lerna run watch --scope=\"@vrembem/$npm_config_component\" --parallel",
    "watch:vb": "lerna run watch --scope=vrembem --parallel"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^3.0.5",
    "concurrently": "^9.1.2",
    "del-cli": "^6.0.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jsdom": "^26.0.0",
    "lerna": "^8.1.9",
    "lerna-changelog": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.1",
    "sass": "^1.85.0",
    "stylelint": "^16.14.1",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.3",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.7"
  }
}
