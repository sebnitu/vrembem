{
  "name": "root",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "lerna run build --stream",
    "clean": "lerna run clean --stream",
    "docs": "concurrently --kill-others 'npm run server' 'npm run watch:docs' 'npm run watch:vb'",
    "fix": "npm-run-all fix:styles fix:scripts",
    "fix:scripts": "eslint --fix packages",
    "fix:styles": "stylelint --fix 'packages/**/*.scss'",
    "lint": "npm-run-all lint:styles lint:scripts",
    "lint:scripts": "eslint packages",
    "lint:styles": "stylelint 'packages/**/*.scss'",
    "server": "lerna run server --scope=docs --parallel",
    "sink": "npm-run-all build lint test:coverage",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "watch": "lerna run watch --scope=@vrembem/$npm_config_c --parallel",
    "watch:docs": "lerna run watch --scope=vrembem --parallel",
    "watch:vb": "lerna run watch --scope=vrembem --parallel"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@testing-library/dom": "^7.24.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/user-event": "^12.1.7",
    "babel-jest": "^26.5.0",
    "concurrently": "^5.3.0",
    "coveralls": "^3.1.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.10.0",
    "eslint-plugin-jest": "^24.0.2",
    "jest": "^26.5.2",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "microbundle": "^0.12.4",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "sass": "^1.26.12",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "stylelint-selector-bem-pattern": "^2.1.0"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/dev/",
      "/dist/",
      "/node_modules/"
    ]
  }
}
