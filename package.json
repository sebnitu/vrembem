{
  "name": "root",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "lerna run build --parallel",
    "clean": "lerna run clean --parallel",
    "docs": "concurrently --kill-others 'npm run server' 'npm run watch:docs'",
    "fix": "npm run fix:styles && npm run fix:scripts",
    "fix:scripts": "eslint --fix packages",
    "fix:styles": "stylelint --fix 'packages/**/*.scss'",
    "lint": "npm run lint:styles && npm run lint:scripts",
    "lint:scripts": "eslint packages",
    "lint:styles": "stylelint 'packages/**/*.scss'",
    "watch": "lerna run watch --parallel",
    "watch:docs": "lerna run watch --scope @vrembem/docs --parallel",
    "watch:scripts": "lerna run watch:scripts --parallel",
    "watch:styles": "lerna run watch:styles --parallel",
    "server": "lerna run server --scope @vrembem/docs --parallel",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@testing-library/jest-dom": "^5.11.2",
    "babel-jest": "^26.2.1",
    "concurrently": "^5.2.0",
    "coveralls": "^3.1.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.5.0",
    "eslint-plugin-jest": "^23.19.0",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.23.0",
    "rollup-plugin-terser": "^6.1.0",
    "sass": "^1.26.10",
    "stylelint": "^13.6.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "stylelint-selector-bem-pattern": "^2.1.0"
  }
}
