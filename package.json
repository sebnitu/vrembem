{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "lerna run build --parallel",
    "clean": "lerna run clean --parallel",
    "docs": "concurrently --kill-others 'npm run server' 'npm run watch:docs'",
    "fix": "npm run fix:styles || true && npm run fix:scripts || true",
    "fix:scripts": "eslint --fix packages || true",
    "fix:styles": "stylelint --fix 'packages/**/*.scss' || true",
    "lint": "npm run lint:styles || true && npm run lint:scripts || true",
    "lint:scripts": "eslint packages || true",
    "lint:styles": "stylelint 'packages/**/*.scss' || true",
    "watch": "lerna run watch --parallel",
    "watch:docs": "lerna run watch --scope @vrembem/docs --parallel",
    "watch:scripts": "lerna run watch:scripts --parallel",
    "watch:styles": "lerna run watch:styles --parallel",
    "server": "lerna run server --parallel",
    "test": "jest || true",
    "test:watch": "jest --watch || true"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.5.5",
    "@testing-library/jest-dom": "^4.1.0",
    "babel-jest": "^24.9.0",
    "concurrently": "^4.1.2",
    "del-cli": "^2.0.0",
    "eslint": "^6.1.0",
    "eslint-plugin-jest": "^22.15.2",
    "jest": "^24.9.0",
    "jest-puppeteer": "^4.3.0",
    "lerna": "^3.18.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^1.20.0",
    "rollup": "^1.19.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-babel-minify": "^9.0.0",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "sass": "^1.23.0",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.0.1",
    "stylelint-scss": "^3.9.3",
    "stylelint-selector-bem-pattern": "^2.1.0"
  },
  "jest": {
    "preset": "jest-puppeteer"
  }
}
