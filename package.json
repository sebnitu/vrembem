{
  "name": "vrembem",
  "description": "â€”is a CSS component library based on the BEM methodology.",
  "title": "Vrembem",
  "version": "0.1.5",
  "author": {
    "name": "Sebastian Nitu",
    "email": "me@sebnitu.com",
    "url": "http://sebnitu.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sebnitu/vrembem.git"
  },
  "bugs": "https://github.com/sebnitu/vrembem/issues",
  "license": "MIT",
  "babel": {
    "presets": [
      "env"
    ]
  },
  "scripts": {
    "clean": "yarn css:clean && yarn demo:clean",
    "css:clean": "rimraf css",
    "css:dev": "node-sass scss/vrembem.scss css/vrembrem.css --output-style expanded --source-map true",
    "css:prod": "node-sass scss/vrembem.scss css/vrembrem.min.css --output-style compressed --source-map true",
    "css:post": "postcss css/*.css --dir css --use autoprefixer --no-map true",
    "css": "yarn css:clean && yarn css:dev && yarn css:prod && yarn css:post",
    "demo:clean": "rimraf demo",
    "demo:css": "node-sass src/assets/scss/styles.scss demo/assets/styles.min.css --include-path scss --output-style compressed --source-map true",
    "demo:css:post": "postcss demo/assets/*.css --dir demo/assets --use autoprefixer --no-map true",
    "demo:js": "browserify src/assets/js/scripts.js | uglifyjs -c > demo/assets/scripts.min.js",
    "demo:assets": "yarn demo:css && yarn demo:css:post && yarn demo:js",
    "demo:pages": "babel-node src/pages.js",
    "demo": "yarn demo:clean && yarn demo:assets && yarn demo:pages",
    "symbols": "babel-node src/symbols.js",
    "serve": "cd demo && live-server --host=localhost --port=9000",
    "start": "yarn css && yarn demo && yarn serve"
  },
  "devDependencies": {
    "autoprefixer": "^8.0.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "colors": "^1.1.2",
    "ejs": "^2.5.7",
    "feather-icons": "^4.5.0",
    "glob": "^7.1.2",
    "highlight.js": "^9.12.0",
    "html-minifier": "^3.5.7",
    "list.js": "^1.5.0",
    "live-server": "^1.2.0",
    "markdown-it": "^8.4.0",
    "node-sass": "^4.7.2",
    "node-watch": "^0.5.5",
    "postcss-cli": "^5.0.0",
    "rimraf": "^2.6.2",
    "shelljs": "^0.8.1",
    "svg-symbols": "^1.0.4",
    "uglify-js": "^3.2.2"
  }
}
