{
  "name": "root",
  "type": "module",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "docs",
    "test"
  ],
  "scripts": {
    "dev": "vite",
    "build": "lerna run build --stream",
    "clean": "lerna run clean --stream",
    "docs": "npm run dev --prefix docs",
    "fix": "npm-run-all fix:styles fix:scripts",
    "fix:scripts": "eslint --fix",
    "fix:styles": "stylelint --fix '**/*.scss'",
    "lint": "npm-run-all lint:styles lint:scripts",
    "lint:scripts": "eslint",
    "lint:styles": "stylelint '**/*.scss'",
    "sink": "npm ci && npm-run-all build lint test:coverage",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "watch": "lerna run watch --scope=\"@vrembem/$npm_config_component\" --parallel",
    "watch:vb": "lerna run watch --scope=vrembem --parallel"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "jsdom": "^26.1.0",
    "lerna": "^8.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.0",
    "sass": "^1.89.2",
    "stylelint": "^16.21.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "^5.0.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vitest": "^3.0.4"
  }
}
