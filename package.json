{
  "name": "root",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "dev": "vite",
    "build": "lerna run build --stream",
    "clean": "lerna run clean --stream",
    "docs": "npm run dev --prefix docs",
    "fix": "npm-run-all fix:styles fix:scripts",
    "fix:scripts": "eslint --fix packages",
    "fix:styles": "stylelint --fix '**/*.scss'",
    "lint": "npm-run-all lint:styles lint:scripts",
    "lint:scripts": "eslint packages",
    "lint:styles": "stylelint '**/*.scss'",
    "sink": "npm ci && npm-run-all build lint test:coverage",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "watch": "lerna run watch --scope=\"@vrembem/$npm_config_component\" --parallel",
    "watch:vb": "lerna run watch --scope=vrembem --parallel"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/user-event": "^14.5.2",
    "@vitest/coverage-v8": "^1.4.0",
    "concurrently": "^8.2.2",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "jsdom": "^24.0.0",
    "lerna": "^8.1.2",
    "lerna-changelog": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.74.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "stylelint-order": "^6.0.4",
    "vite": "^5.2.8",
    "vitest": "^1.2.2"
  },
  "overrides": {
    "nwsapi": "2.2.2"
  }
}
