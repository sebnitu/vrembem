{
  "name": "vrembem",
  "description": "â€”is a CSS component library based on the BEM methodology.",
  "title": "Vrembem",
  "version": "0.2.0",
  "author": {
    "name": "Sebastian Nitu",
    "email": "me@sebnitu.com",
    "url": "http://sebnitu.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sebnitu/vrembem.git"
  },
  "bugs": "https://github.com/sebnitu/vrembem/issues",
  "license": "MIT",
  "babel": {
    "presets": [
      "env"
    ]
  },
  "scripts": {
    "clean": "yarn dist:clean && yarn build:clean",
    "dist:clean": "rimraf dist",
    "dist:dev": "node-sass scss/vrembem.scss dist/vrembrem.css --output-style expanded --source-map true",
    "dist:prod": "node-sass scss/vrembem.scss dist/vrembrem.min.css --output-style compressed --source-map true",
    "dist:post": "postcss dist/*.css --dir dist --use autoprefixer --no-map true",
    "dist": "yarn dist:clean && yarn dist:dev && yarn dist:prod && yarn dist:post",
    "build:clean": "rimraf demo",
    "build:dev": "node-sass src/assets/styles.scss demo/assets/styles.css --include-path scss --output-style expanded --source-map true",
    "build:prod": "node-sass src/assets/styles.scss demo/assets/styles.min.css --include-path scss --output-style compressed --source-map true",
    "build:post": "postcss demo/assets/*.css --dir demo/assets --use autoprefixer --no-map true",
    "build:pages": "babel-node src/index.js",
    "build": "yarn build:clean && yarn build:dev && yarn build:prod && yarn build:post && yarn build:pages",
    "serve": "cd demo && live-server --host=localhost --port=9000",
    "start": "yarn dist && yarn build && yarn serve"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.1",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "colors": "^1.1.2",
    "ejs": "^2.5.7",
    "feather-icons": "^4.0.1",
    "glob": "^7.1.2",
    "gray-matter": "^3.1.1",
    "highlight.js": "^9.12.0",
    "live-server": "^1.2.0",
    "markdown-it": "^8.4.0",
    "node-sass": "^4.7.2",
    "node-watch": "^0.5.5",
    "postcss-cli": "^4.1.1",
    "rimraf": "^2.6.2",
    "shelljs": "^0.7.8",
    "svg-symbols": "^1.0.4"
  }
}
